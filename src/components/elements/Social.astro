<style>
  .company-logo {
    position: fixed;
    top: 1em;
    right: 1em;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    gap: 10px;
    background: rgba(255, 255, 255, 0.8); /* Slight transparency */
    padding: 0 1em;
    border-radius: 0.5em;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 10;
    height: 3em;
    width: 12em;
  }

  .company-logo img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .company-logo span {
    font-size: 16px;
    font-weight: bold;
    color: #333;
  }
  .sr-only {
    border: 0;
    padding: 0;
    margin: 0;
    position: absolute !important;
    height: 1px;
    width: 1px;
    overflow: hidden;
    clip: rect(1px 1px 1px 1px);
    clip: rect(1px, 1px, 1px, 1px);
    clip-path: inset(50%);
    white-space: nowrap;
  }

  @media (max-width: 900px) {
    .company-logo span {
      display: none;
    }
    .company-logo {
      height: 3em;
      width: auto;
      /* background: none; */
      display: none;
    }
  }
  a {
    transition: 0.5s;
  }
  .company-logo a:hover {
    scale: 1.2;
  }
</style>

