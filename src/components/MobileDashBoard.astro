---
import Loader from "./loader.astro";
---

<body class="hideScrolls">
  <Loader />
  <div class="tab-container hideScrolls" id="tab-container">
    <div id="tool-title"></div>
    <div id="fullscreen" class="hideScrolls">
      <!--?xml version="1.0" encoding="utf-8"?-->
      <svg
        width="100%"
        height="100%"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M6 9.99739C6.01447 8.29083 6.10921 7.35004 6.72963 6.72963C7.35004 6.10921 8.29083 6.01447 9.99739 6"
          stroke="black"
          stroke-width="1.5"
          stroke-linecap="round"></path>
        <path
          d="M6 14.0007C6.01447 15.7072 6.10921 16.648 6.72963 17.2684C7.35004 17.8888 8.29083 17.9836 9.99739 17.998"
          stroke="black"
          stroke-width="1.5"
          stroke-linecap="round"></path>
        <path
          d="M17.9976 9.99739C17.9831 8.29083 17.8883 7.35004 17.2679 6.72963C16.6475 6.10921 15.7067 6.01447 14.0002 6"
          stroke="black"
          stroke-width="1.5"
          stroke-linecap="round"></path>
        <path
          d="M17.9976 14.0007C17.9831 15.7072 17.8883 16.648 17.2679 17.2684C16.6475 17.8888 15.7067 17.9836 14.0002 17.998"
          stroke="black"
          stroke-width="1.5"
          stroke-linecap="round"></path>
        <circle cx="12" cy="12" r="10" stroke="black" stroke-width="1.5"
        ></circle>
      </svg>
    </div>

    <div class="tabs">
      <button class="tab-btn active">Tool</button>
      <button class="tab-btn">Result</button>
      <button class="tab-btn">Edit</button>
    </div>

    <div class="content-block">
      <div class="tab-content" style="display: block">
        <div id="app" class="form-container"></div>
      </div>
      <div class="tab-content" id="renderedMarkdown"></div>
      <textarea
        class="tab-content"
        id="output"
        placeholder="Your generated prompt will appear here..."></textarea>
    </div>
    <div class="tabs">
      <button class="tab-btn-bottom" data-target="profile">Profile</button>
      <button class="tab-btn-bottom" data-target="marketPlace"
        >Market Place</button
      >
      <button class="tab-btn-bottom" data-target="subscribedTools"
        >My Tools</button
      >
    </div>
  </div>
  <div id="bottom-button-pages">
    <div id="subscribedTools" class="bottom-tab-content">
      <span class="close-btn">Close ❌</span>
    </div>
    <div id="marketPlace" class="bottom-tab-content">
      <span class="close-btn">Close ❌</span>Market Place
    </div>
    <div id="profile" class="bottom-tab-content">
      <span class="close-btn">Close ❌</span>Profile
      <div id="logoutButton2">Log Out</div>
    </div>
  </div>
</body>
