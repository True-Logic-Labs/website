<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Token Status Bar</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #f9fafb;
      }

      .token-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 16px;
        background: #ffffff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border-radius: 12px;
        margin: 16px auto;
        width: 45em;
        font-size: 0.95rem;
        color: #374151;
        gap: 10px;
      }

      .token-bar div {
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .token-bar span {
        font-weight: bold;
        color: #111827;
      }

      .buy-btn {
        background: linear-gradient(135deg, #6366f1, #4f46e5);
        color: white;
        padding: 6px 14px;
        border: none;
        border-radius: 8px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background 0.3s ease;
        text-decoration: none;
        white-space: nowrap;
      }

      .buy-btn:hover {
        background: linear-gradient(135deg, #4f46e5, #4338ca);
      }

      @media (max-width: 600px) {
        .token-bar {
          flex-wrap: wrap;
          justify-content: center;
          gap: 8px;
          padding: 12px;
        }

        .buy-btn {
          width: 100%;
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <div class="token-bar">
      <div>Total Tokens Remaining: <span id="tokens-left">500</span></div>
      <div>Tokens Used by tool: <span id="tokens-used">30</span></div>
      <a href="/buy-tokens" class="buy-btn">Buy Tokens</a>
    </div>

    <script>
      // Dynamic data from backend/API (example values)
      const totalTokensLeft = 470; // Example fetched value
      const tokensUsed = 30;

      // Update DOM
      document.getElementById("tokens-left").innerText = totalTokensLeft;
      document.getElementById("tokens-used").innerText = tokensUsed;

      // Optional: Buy button logic
      document
        .querySelector(".buy-btn")
        .addEventListener("click", function (e) {
          e.preventDefault();
          // You can also trigger modal instead of redirect
          alert("Redirecting to Buy Tokens Page...");
          window.location.href = "/buy-tokens"; // Adjust link
        });
    </script>
  </body>
</html>
