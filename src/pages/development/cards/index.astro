<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>3x3 Grid with Circles</title>
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f4f4f4;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(9, 1fr);
        grid-template-rows: repeat(9, 1fr);
        gap: 10px;
        width: 50%;
        height: 50%;
      }

      .cell {
        display: flex;
        justify-content: center;
        align-items: center;
        transition: 0.3s;
      }

      .cell:hover {
        scale: 1.2;
        z-index: 2;
      }

      .circle {
        width: 100%;
        height: 100%;
        background-color: var(--i);
        /* border-radius: 50%; */
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-weight: bold;
        font-size: 14px;
      }

      /* Specific positioning */
      #t1-1 {
        grid-column: 1 / 3;
        grid-row: 2 / 3;
      }
      /* #t1-2 {
        grid-column: 3 / 3;
        grid-row: 1 / 2;
      }
      #t1-3 {
        grid-column: 3 / 4;
        grid-row: 1 / 2;
      }
      #t2-3 {
        grid-column: 3 / 4;
        grid-row: 2 / 3;
      }
      #t3-3 {
        grid-column: 3 / 4;
        grid-row: 3 / 4;
      } */
    </style>
  </head>
  <body>
    <div class="grid">
      <div class="cell">
        <div class="circle" id="t1-1" style="--i:red;">1-1</div>
      </div>
      <div class="cell">
        <div class="circle" id="t1-2" style="--i:green;">1-2</div>
      </div>
      <div class="cell">
        <div class="circle" id="t1-3" style="--i:red;">1-3</div>
      </div>
      <div class="cell">
        <div class="circle" id="t2-3" style="--i:green;">2-3</div>
      </div>
      <div class="cell">
        <div class="circle" id="t3-3" style="--i:pink;">3-3</div>
      </div>
    </div>
  </body>
</html>
