<script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.1.9/p5.min.js" defer
></script>
<script
  src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.trunk.min.js"
  defer></script>
<style>
  .hello {
    position: fixed;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0;
  }
</style>

<div class="hello"></div>

<script>
  window.addEventListener("DOMContentLoaded", () => {
    VANTA.TRUNK({
      el: ".hello",
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.0,
      minWidth: 200.0,
      scale: 1.0,
      scaleMobile: 1.0,
      color: 0xb0b0c5,
      backgroundColor: 0x345578,
      spacing: 16.0,
      chaos: 2.0,
    });
  });
</script>
