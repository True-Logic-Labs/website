<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Interactive 3D Blocks & Spheres with Hover Text - A-Frame</title>
    <script src="https://aframe.io/releases/1.7.0/aframe.min.js"></script>
    <style>
      body {
        margin: 0;
        overflow: hidden;
      }
    </style>
  </head>
  <body>
    <a-scene background="color: #ECECEC">
      <!-- CAMERA -->
      <a-entity position="0 1.6 8">
        <a-camera wasd-controls-enabled="true" look-controls-enabled="true"
        ></a-camera>
      </a-entity>

      <!-- LIGHTS -->
      <a-entity light="type: ambient; intensity: 0.5"></a-entity>
      <a-entity
        light="type: directional; color: #FFF; intensity: 0.7"
        position="1 1 0"></a-entity>

      <!-- 3D BLOCK (Cube) -->
      <a-box
        id="cube"
        position="-2 1 -5"
        depth="1"
        height="1"
        width="1"
        color="#4CC3D9"
        class="hoverable"></a-box>
      <!-- Tooltip for Cube -->
      <a-text
        id="cube-tooltip"
        value="3D Marketing Block"
        align="center"
        color="#222"
        position="-2 2.2 -5"
        visible="false"></a-text>

      <!-- 3D SPHERE -->
      <a-sphere
        id="sphere"
        position="2 1 -5"
        radius="0.7"
        color="#FFC65D"
        class="hoverable"></a-sphere>
      <!-- Tooltip for Sphere -->
      <a-text
        id="sphere-tooltip"
        value="Analytics Tool Sphere"
        align="center"
        color="#222"
        position="2 2.2 -5"
        visible="false"></a-text>
    </a-scene>

    <script>
      // Helper function for hover events
      function addHoverEffect(entityId, tooltipId) {
        const entity = document.querySelector(entityId);
        const tooltip = document.querySelector(tooltipId);

        entity.addEventListener("mouseenter", () => {
          tooltip.setAttribute("visible", "true");
          entity.setAttribute("color", "#FF5733"); // Change color on hover
        });

        entity.addEventListener("mouseleave", () => {
          tooltip.setAttribute("visible", "false");
          entity.setAttribute(
            "color",
            entityId === "#cube" ? "#4CC3D9" : "#FFC65D"
          ); // Reset color
        });
      }

      // Attach hover effects to both objects
      document.addEventListener("DOMContentLoaded", () => {
        addHoverEffect("#cube", "#cube-tooltip");
        addHoverEffect("#sphere", "#sphere-tooltip");
      });
    </script>
  </body>
</html>
